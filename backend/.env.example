# 애플리케이션 설정
APP_NAME=개인회생 서류 관리 시스템
APP_VERSION=1.0.0
DEBUG=true

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 데이터베이스
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rehabilitation_docs

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT 인증 (프로덕션에서 반드시 변경!)
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Hyphen API (https://hyphen.im 에서 발급)
HYPHEN_API_KEY=           # HKey (API 인증키)
HYPHEN_CLIENT_ID=         # User ID (회원 계정)
HYPHEN_EKEY=              # EKey (암호화키, AES128용)
HYPHEN_BASE_URL=https://api.hyphen.im

# 파일 저장
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# 암호화 키 (32바이트, 프로덕션에서 반드시 변경!)
ENCRYPTION_KEY=your-encryption-key-32-bytes-long
